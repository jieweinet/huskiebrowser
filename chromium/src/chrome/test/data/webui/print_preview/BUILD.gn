import("//build/config/chromeos/ui_mode.gni")
import("//tools/grit/preprocess_if_expr.gni")
import("//ui/webui/resources/tools/generate_grd.gni")

preprocess_manifest = "preprocessed_manifest.json"

preprocess_if_expr("preprocess") {
  in_folder = "./"
  out_folder = "$target_gen_dir"
  out_manifest = "$target_gen_dir/$preprocess_manifest"
  in_files = [
    "destination_settings_test.js",
    "destination_store_test.js",
    "invalid_settings_browsertest.js",
    "key_event_test.js",
    "policy_test.js",
    "preview_generation_test.js",
    "print_button_test.js",
    "print_preview_app_test.js",
    "print_preview_sidebar_test.js",
    "restore_state_test.js",
    "user_manager_test.js",
  ]
}

generate_grd("build_grdp") {
  grd_prefix = "webui_print_preview"
  out_grd = "$target_gen_dir/resources.grdp"

  input_files_base_dir = rebase_path(".", "//")
  input_files = [
    "cloud_print_interface_stub.js",
    "native_layer_stub.js",
    "print_preview_test_utils.js",
    "test_plugin_proxy.js",
  ]
  if (is_chromeos) {
    input_files += [ "native_layer_cros_stub.js" ]
  }

  deps = [ ":preprocess" ]
  manifest_files = [ "$target_gen_dir/$preprocess_manifest" ]
  resource_path_prefix = "print_preview"
}
